        ]
    },
    # …add similar entries for the remaining 22 teams…
]

# ——— 2. Build the BBGM JSON —————————————————————————————————————————————
bbgm = {"season": 2024, "teams": [], "freeAgents": []}
pid = 1000
tid = 0

for team in top_25:
    roster = []
    for idx, (first, last, pos, hgt, byear, img) in enumerate(team["players"], start=1):
        roster.append({
            "pid": pid,
            "firstName": first,
            "lastName": last,
            "pos": pos,
            "hgt": hgt,
            "weight": 165,  # placeholder
            "born": {"year": byear, "loc": "USA"},
            "ratings": {"ovr": 85, "pot": 90},  # placeholder reasonable values
            "imgURL": img,
            "rosterOrder": idx
        })
        pid += 1

    bbgm["teams"].append({
        "tid": tid,
        "region": team["name"].split()[0],
        "name": team["name"],
        "abbrev": team["abbrev"],
        "players": roster
    })
    tid += 1

# ——— 3. Add Future Draft Prospects as Free Agents ————————————————————————
future = [
    ("Future", "Guard", "G"),
    ("Future", "Forward", "F"),
    ("Future", "Center", "C")
]
for first, last, pos in future:
    bbgm["freeAgents"].append({
        "pid": pid,
        "firstName": first,
        "lastName": last,
        "pos": pos,
        "hgt": 75,
        "weight": 170,
        "born": {"year": 2006, "loc": "USA"},
        "ratings": {"ovr": 70, "pot": 92},
        "freeAgent": True,
        "imgURL": "https://example.com/future_player.png"
    })
    pid += 1

# ——— 4. Save to .json File ———————————————————————————————————————————————
with open("women_top25_realrosters.json", "w") as f:
    json.dump(bbgm, f, indent=2)

print("✅ women_top25_realrosters.json created with real rosters + future free agents")
