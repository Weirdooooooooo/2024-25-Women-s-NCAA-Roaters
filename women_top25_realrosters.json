        ]
    },
    {
        "name": "South Carolina Gamecocks",
        "abbrev": "SCAR",
        "players": [
            ("Aliyah", "Boston", "F", 78, 1999, "https://a.espncdn.com/i/headshots/womens-college-basketball/players/full/4429282.png"),
            ("Destanni", "Hughes", "G", 69, 2001, "https://a.espncdn.com/i/headshots/womens-college-basketball/players/full/4427024.png"),
            ("Joyce", "Edwards", "F", 75, 2006, "https://a.espncdn.com/i/headshots/womens-college-basketball/players/full/5174285.png")
